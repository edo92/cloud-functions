{
    "compilerOptions": {
        "target": "ES2015",
        "module": "CommonJS",
        "lib": [
            "dom",
            "es6",
            "dom.iterable",
            "scripthost"
        ],
        "sourceMap": false,
        "outDir": "./dist",
        "rootDir": "./src",
        "removeComments": true,
        "noEmitOnError": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
    },
    "exclude": [
        "node_modules"
    ]
}